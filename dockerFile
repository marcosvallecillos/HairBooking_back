FROM php:8.2-fpm

# Instala extensiones necesarias para Symfony y MySQL
RUN apt-get update && apt-get install -y \
    git unzip libicu-dev libzip-dev libonig-dev \
    && docker-php-ext-install intl pdo pdo_mysql zip

WORKDIR /app

# Copia los archivos de tu proyecto Symfony
COPY . .

# Instala Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Instala dependencias de PHP
RUN composer install --no-interaction --prefer-dist --optimize-autoloader

# Expón el puerto que usará tu aplicación (ajusta si usas otro)
EXPOSE 8000

# Comando para iniciar el servidor de Symfony
CMD ["php", "-S", "0.0.0.0:8000", "-t", "public"]