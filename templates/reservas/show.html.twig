{% extends 'base.html.twig' %}

{% block title %}Reservas{% endblock %}

{% block body %}
    <h1>Reservas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reserva.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ reserva.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ reserva.apellidos }}</td>
            </tr>
            <tr>
                <th>Fecha_cita</th>
                <td>{{ reserva.fechaCita ? reserva.fechaCita|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Tipo_corte</th>
                <td>{{ reserva.tipoCorte }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservas_index') }}">back to list</a>

    <a href="{{ path('app_reservas_edit', {'id': reserva.id}) }}">edit</a>

    {{ include('reservas/_delete_form.html.twig') }}
